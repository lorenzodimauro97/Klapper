@using Klapper.Data
@using System.Timers
@inject MoonrakerApiService Api
@inject NotificationService Toast

@if (data != null)
{
    <div class="product-card">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@Name</h5>
                <p class="card-text">Temperature: @data.temperature Â°C</p>
                @if (data.IsHeater)
                {
                    <p class="card-text">Power: @data.GetPowerPercent().ToString(@"n2")%</p>
                }
            </div>
            @if (data.IsHeater)
            {
                <div class="card-body">
                    <p class="card-text">
                        Target Temperature:
                        <RadzenNumeric @bind-value="@data.target" TValue="double" Min="0" Max="999" Change=@(OnPowerChange) Class="w-100"/>
                    </p>
                </div>
            }
        </div>
    </div>
}

@code {

    [Parameter]
    public string Name { get; set; }

    public HeatableSensible data;

    protected override async Task OnInitializedAsync()
    {
        await RefreshData();
        SetAutoRefresh();
        await base.OnInitializedAsync();
    }

    private void SetAutoRefresh()
    {
        var timer = new Timer(200);
        timer.Elapsed += async (_, _) =>
        {
            await RefreshData();
            await InvokeAsync(StateHasChanged);
			timer.Start();
        };
        timer.AutoReset = false;
        timer.Enabled = true;
    }

    private async Task RefreshData()
    {
        try
        {
            data = await Api.GetObject<HeatableSensible>(Name, true);
        }
        catch (Exception)
        {
        }
    }


    private async Task OnPowerChange(double args)
    {
        var result = await Api.RunGCode($"SET_HEATER_TEMPERATURE HEATER={Name} TARGET={args}");

        ToastNotification.Notificate(Toast, result.Item1, "Temperature changed successfully", result.Item2);
    }

}